{
  "manifest_version": 3,
  "name": "Foxxy Plugin Tester",
  "version": "1.0",
  "description": "Test and debug Foxxy plugins",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["plugins/*/*.js", "plugins/*/*.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

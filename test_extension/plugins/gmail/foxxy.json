{
  "site": "gmail.com",
  "name": "Gmail Email Driver",
  "version": "1.0",
  "routes": {
    "inbox": "https://mail.google.com/mail/u/0/#inbox",
    "sent": "https://mail.google.com/mail/u/0/#sent",
    "drafts": "https://mail.google.com/mail/u/0/#drafts",
    "starred": "https://mail.google.com/mail/u/0/#starred",
    "compose": "https://mail.google.com/mail/u/0/#compose"
  },
  "capabilities": {
    "open_compose": {
      "description": "Open compose email popup",
      "params": [],
      "returns": "status"
    },
    "write_receiver": {
      "description": "Write recipient email address in To field",
      "params": ["to"],
      "returns": "status"
    },
    "write_subject": {
      "description": "Write subject line of email",
      "params": ["subject"],
      "returns": "status"
    },
    "write_body": {
      "description": "Write body content of email",
      "params": ["body"],
      "returns": "status"
    },
    "send_email": {
      "description": "Click send button to send email",
      "params": [],
      "returns": "status"
    },
    "reply": {
      "description": "Reply to the current email",
      "params": ["text"],
      "returns": "status"
    },
    "forward": {
      "description": "Forward the current email",
      "params": ["to"],
      "returns": "status"
    },
    "delete_email": {
      "description": "Delete the current email",
      "params": [],
      "returns": "status"
    },
    "archive_email": {
      "description": "Archive the current email",
      "params": [],
      "returns": "status"
    },
    "star_email": {
      "description": "Star the current email",
      "params": [],
      "returns": "status"
    },
    "search": {
      "description": "Search emails",
      "params": ["query"],
      "returns": "page"
    },
    "open_email": {
      "description": "Open the nth email from the currently visible list (1-based index)",
      "params": ["n"],
      "returns": "status"
    },
    "get_subject": {
      "description": "Get email subject",
      "params": [],
      "returns": "string"
    },
    "get_sender": {
      "description": "Get email sender",
      "params": [],
      "returns": "string"
    }
  },
  "contexts": {
    "inbox_page": ["open_compose", "search", "open_email"],
    "email_page": ["reply", "forward", "delete_email", "archive_email", "star_email", "get_subject", "get_sender"],
    "compose_page": ["write_receiver", "write_subject", "write_body", "send_email"]
  }
}
